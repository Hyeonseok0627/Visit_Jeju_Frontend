<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- main -->
    <style name="mainTitleStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
    </style>
    <style name="mainSubTitleStyle">
        <item name="android:textColor">#666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>

    <style name="subTitleStyle">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
    </style>

    <style name="toolbarStyle">
        <item name="android:textColor">#fff</item>
    </style>

    <!-- Button -->
    <style name="buttonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_radius_point</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="buttonStyle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_radius_base</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="signTitleStyle">
        <item name="android:textColor">@color/jejutourPoint</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signUpSubTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="signUpSubTitle2">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sans_medium</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


</resources>